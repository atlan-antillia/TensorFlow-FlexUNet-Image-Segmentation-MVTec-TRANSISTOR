; train_eval_infer.config
; 2025/10/20 (C) antillia.com
; MVTEC-TRANSISTOR segmentation

[model]
model         = "TensorFlowFlexUNet"
generator     =  False

image_width    = 512
image_height   = 512
image_channels = 3
input_normalize = False
normalization  = False
num_classes    = 5

base_filters   = 16
base_kernels   = (11,11)
num_layers     = 8
dropout_rate   = 0.03
dilation       = (3,3)

; Model compilation parameters
optimizer       = "Adam"

learning_rate  = 0.00006

clipvalue      = 0.4

; Specify "categorical_crossentropy" function to loss
; for categoraized(one-hot-encoded) mask 

loss           = "categorical_crossentropy"
metrics        = ["dice_coef_multiclass"]

show_summary   = False

[dataset]
class_name    = "ImageCategorizedMaskDataset"

[train]
;epochs       = 50
epochs        = 100
batch_size    = 2

;steps_per_epoch  = 200
;validation_steps = 80

; EarlyStopping parameter
patience      = 10

metrics       = ["dice_coef_multiclass", "val_dice_coef_multiclass"]

model_dir     = "./models/"
eval_dir      = "./eval/"
images_dir    = "../../../dataset/MVTEC-TRANSISTOR/train/images/"
masks_dir     = "../../../dataset/MVTEC-TRANSISTOR/train/masks/"

create_backup  = False

; learning_rate_reducer callback parameter
learning_rate_reducer = True
reducer_factor     = 0.4
reducer_patience   = 4

epoch_change_infer     = True
epoch_change_infer_dir =  "./epoch_change_infer"
num_infer_images       = 6

; Model saving option
save_weights_only  = True

[valid]
images_dir = "../../../dataset/MVTEC-TRANSISTOR/valid/images/"
masks_dir  = "../../../dataset/MVTEC-TRANSISTOR/valid/masks/"

[test] 
images_dir = "../../../dataset/MVTEC-TRANSISTOR/test/images/"
masks_dir  = "../../../dataset/MVTEC-TRANSISTOR/test/masks/"

[infer] 
images_dir    = "./mini_test/images/"
output_dir    = "./mini_test_output/"

[image]
color_order = "RGB"

[mask]
mask_file_format = ".png"

;BGR color_map = {self.BENT_LEAD:(0,255,0), self.CUT_LEAD:(255,0,0), self.DAMAGED: (0,0,255), self.MISPLACED:(255,255,0), } 
;                 
;RBB             bent_lead:green, cut_lead:blue,  damaged_case:red,   misplaced:cyan   
rgb_map = {(0,0,0):0, (0,255,0):1,(0,0,255):2,(255,0,0):3,(0,255,255):4}
